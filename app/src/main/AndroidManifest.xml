        android:hardwareAccelerated="false"
        android:icon="@drawable/mipl_final_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mipl_final_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MahycoMarketDemo"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.changepassword.ChangePasswordActivity" android:exported="false" android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.fieldreport.FiledReportDashboard"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:exported="false" />
